<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:padding="5dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/close_popup"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/ic_close"
        />

    <ImageView
        android:id="@+id/qr_code"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_ac_unit"
        />

    <TextView
        android:id="@+id/scan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/qr_code"
        android:layout_toStartOf="@+id/popup"
        android:layout_toEndOf="@+id/popup"
        android:text="@string/scan_at_entrance"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:ignore="NotSibling"
        />



    <TextView
        android:id="@+id/reserved_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/scan_text"

        android:text="@string/seats"

        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>